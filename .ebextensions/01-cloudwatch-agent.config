files:
  "/opt/aws/amazon-cloudwatch-agent/bin/config.json":
    mode: "000644"
    owner: root
    group: root
    content: |
      {
        "agent": {
          "metrics_collection_interval": 60,
          "run_as_user": "root"
        },
        "metrics": {
          "append_dimensions": {
            "AutoScalingGroupName": "${aws:AutoScalingGroupName}",
            "ImageId": "${aws:ImageId}",
            "InstanceId": "${aws:InstanceId}"
          },
          "metrics_collected": {
            "mem": {
              "measurement": [
                "mem_used_percent"
              ],
              "metrics_collection_interval": 60
            }
          }
        }
      }

commands:
  01_download_cloudwatch_agent:
    command: "curl -O https://s3.amazonaws.com/amazoncloudwatch-agent/amazon_linux/amd64/latest/amazon-cloudwatch-agent.rpm"
    ignoreErrors: true  # Ignore if the download fails (for idempotency)
    
  02_install_cloudwatch_agent:
    command: "sudo rpm -U ./amazon-cloudwatch-agent.rpm"
    ignoreErrors: true  # Ignore if the installation fails (for idempotency)

  03_start_cloudwatch_agent:
    command: "sudo systemctl start amazon-cloudwatch-agent"
    leader_only: true  # Start only on the leader instance

  04_enable_cloudwatch_agent:
    command: "sudo systemctl enable amazon-cloudwatch-agent"

container_commands:
  05_configure_cloudwatch_agent:
    command: "sudo /opt/aws/amazon-cloudwatch-agent/bin/amazon-cloudwatch-agent-ctl -a fetch-config -m ec2 -c file:/opt/aws/amazon-cloudwatch-agent/bin/config.json -s"
    leader_only: true  # Configure only on the leader instance

  06_restart_cloudwatch_agent:
    command: "sudo systemctl restart amazon-cloudwatch-agent"
    leader_only: true  # Restart only on the leader instance

files:
  "/etc/systemd/system/amazon-cloudwatch-agent.service.d/cloudwatch-agent-override.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      [Service]
      ExecStartPost=/opt/aws/amazon-cloudwatch-agent/bin/amazon-cloudwatch-agent-ctl -a fetch-config -m ec2 -c file:/opt/aws/amazon-cloudwatch-agent/bin/config.json -s
