files:
  "/opt/aws/amazon-cloudwatch-agent/bin/config.json":
    mode: "000600"
    owner: root
    group: root
    content: |
      {
        "agent": {
          "metrics_collection_interval": 60,
          "run_as_user": "root"
        },
        "metrics": {
          "append_dimensions": {
            "InstanceId": "$${aws:InstanceId}",
            "ImageId": "${aws:ImageId}"
          },
          "metrics_collected": {
            "mem": {
              "measurement": [
                "mem_total",
                "mem_available",
                "mem_used",
                "mem_free",
                "mem_used_percent"
              ]
            }
          }
        }
      }

commands:
  01_install_cloudwatch_agent:
    command: |
      sudo yum install -y amazon-cloudwatch-agent

  02_enable_cloudwatch_agent:
    command: |
      sudo systemctl enable amazon-cloudwatch-agent

  03_restart_cloudwatch_agent:
    command: |
      sudo systemctl restart amazon-cloudwatch-agent

container_commands:
  apply_config_metrics:
    command: /opt/aws/amazon-cloudwatch-agent/bin/amazon-cloudwatch-agent-ctl -a fetch-config -m ec2 -s -c file:/opt/aws/amazon-cloudwatch-agent/bin/config.json
